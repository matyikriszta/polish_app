= form_for @product do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :brand
    = f.text_field :brand
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :color_description
    = f.text_area :color_description
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :collection
    = f.text_field :collection
  .field
    = f.label :color
    = f.text_field :color
  .field
    = f.label :finish
    = f.text_field :finish
  .actions
    = f.submit 'Save'
